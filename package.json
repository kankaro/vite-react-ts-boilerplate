{
    "name": "react-ts-vite-boilerplate",
    "description": "A starter kit for developing web application using ReactJS with Typescript in a minimal setup to get working in Vite with HMR and some linting rules.",
    "private": true,
    "version": "0.0.2",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git://github.com/kankaro/vite-react-ts-boilerplate.git"
    },
    "engines": {
        "npm": ">=10.2.4",
        "node": ">=20.11.0"
    },
    "author": {
        "name": "Lyndon Baylin Jr"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "css:lint": "stylelint \"**/*.css\"",
        "css:lint-fix": "stylelint \"**/*.css\" --fix",
        "preview": "vite preview",
        "test": "vitest --run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "npx vitest run --coverage",
        "test:report-preview": " npx vite preview --outDir ./html",
        "prepare": "husky"
    },
    "dependencies": {
        "@reduxjs/toolkit": "2.2.7",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-helmet-async": "2.0.5",
        "react-redux": "9.1.2",
        "react-router-dom": "6.26.1"
    },
    "devDependencies": {
        "@commitlint/cli": "19.4.0",
        "@commitlint/config-conventional": "19.2.2",
        "@eslint/js": "^9.8.0",
        "@testing-library/jest-dom": "6.4.8",
        "@testing-library/react": "16.0.0",
        "@testing-library/user-event": "14.5.2",
        "@trivago/prettier-plugin-sort-imports": "4.3.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "@vitest/coverage-v8": "2.0.5",
        "@vitest/ui": "2.0.5",
        "autoprefixer": "10.4.20",
        "clsx": "2.1.1",
        "cross-env": "7.0.3",
        "eslint": "^9.8.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.2.1",
        "eslint-plugin-react": "7.35.0",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "^0.4.9",
        "eslint-plugin-unused-imports": "4.1.3",
        "globals": "^15.9.0",
        "husky": "9.1.4",
        "jsdom": "24.1.1",
        "lint-staged": "15.2.9",
        "postcss": "8.4.41",
        "prettier": "3.3.3",
        "prettier-plugin-tailwindcss": "0.6.6",
        "stylelint": "16.8.2",
        "stylelint-config-standard": "36.0.1",
        "tailwind-merge": "2.5.2",
        "tailwindcss": "3.4.10",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.0.0",
        "vite": "^5.4.0",
        "vite-plugin-checker": "0.7.2",
        "vite-tsconfig-paths": "5.0.1",
        "vitest": "2.0.5"
    }
}
