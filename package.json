{
    "name": "vite-react-ts-boilerplate",
    "description": "A starter kit for developing web application using Vite + React + Typescript.",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "engines": {
        "npm": ">=10.2.4",
        "node": ">=20.11.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kankaro/vite-react-ts-boilerplate"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "css:lint": "stylelint \"**/*.css\"",
        "css:lint-fix": "stylelint \"**/*.css\" --fix",
        "preview": "vite preview",
        "prepare": "husky"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-conventional": "19.2.2",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "10.4.19",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.6",
        "husky": "9.0.11",
        "lint-staged": "15.2.5",
        "postcss": "8.4.38",
        "prettier": "3.3.1",
        "prettier-plugin-tailwindcss": "0.6.2",
        "stylelint": "16.6.1",
        "stylelint-config-standard": "36.0.0",
        "tailwindcss": "3.4.4",
        "typescript": "^5.2.2",
        "vite": "^5.2.0"
    }
}
